  "name": "every.news",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "start": "next start",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "bump": "bunx npm-check-updates -i",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "bun prisma/seed.ts",
    "ci": "prisma db push && next build && bun run start",
    "test": "prisma db push && vitest run",
    "e2e": "playwright test",
    "studio": "prisma studio",
    "docker": "docker rm -f postgres-everynews || true; docker run --name postgres-everynews -e POSTGRES_USER=everynewsusername -e POSTGRES_PASSWORD=everynewspassword -e POSTGRES_DB=everynewsdb -p 54321:5432 -d postgres:latest && sleep 10 && prisma generate && prisma migrate deploy"
  },
